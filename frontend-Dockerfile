# Frontend Dockerfile
FROM node:20.5.1 AS build

WORKDIR /app

# Copy the package.json and package-lock.json from the root for installing dependencies
COPY package*.json ./
RUN npm install

# Copy the frontend source files from ./src to /app/src inside the container
COPY ./src ./src


# Build the frontend application
RUN npm run build

# Serve the build using Nginx
FROM nginx:alpine
COPY --from=build /app/build /usr/share/nginx/html

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
